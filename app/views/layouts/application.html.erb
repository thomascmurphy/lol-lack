<!DOCTYPE html>
<html lang="en">
<head>
  <title>LoLevation</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="header_area">
    <div class="container">
      <div class="row">
        <div class="col-xs-7 col-md-4">
          <a href="/" class="white" id="home_link">
            <%= image_tag("lolevation_logo.png", id: "logo", class: "valign_middle") %>
            <h1 id="site_title" class="inline_block valign_middle alt_font">LoLevation</h1>
          </a>
        </div>
        <div class="col-xs-5 col-md-8">
          <nav class="navbar navbar-default">
            <div class="container-fluid">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
              </div>

              <!-- Collect the nav links, forms, and other content for toggling -->
              <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav">
                  <% if current_page?(url_for controller: 'about', action: 'index') %>
                  <li class="active">
                  <% else %>
                  <li>
                  <% end %>
                    <a href="<%= url_for controller: 'about', action: 'index' %>">About <span class="sr-only">(current)</span></a>
                  </li>
                </ul>
                <ul class="nav navbar-nav navbar-right hidden-xs">
                  <li>
                    <a class="no_bg">
                      <small><%= @matches_analyzed %> matches analyzed</small>
                    </a>
                  </li>
                </ul>
              </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
          </nav>
        </div>
      </div>
    </div>
  </div>
  <div id="notice_area">
    <% if notice %>
      <div class="alert alert-info" role="alert">
        <div class="container">
          <div class="row">
            <div class="col-xs-12">
              <%= notice %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger" role="alert">
        <div class="container">
          <div class="row">
            <div class="col-xs-12">
              <%= alert %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div id="content_area">
    <div class="container<% if @wide_content %>-fluid<% end %>">
      <div class="row">
        <div class="col-xs-12">

          <%= yield %>

        </div>
      </div>
    </div>
  </div>

</body>
</html>
