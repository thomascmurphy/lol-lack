<div class="row">
  <div class="col-xs-2">
    <img src="<%= @champion.image %>" alt="<%= @champion.name %>" class="img-responsive"/>
  </div>
  <div class="col-xs-10">
    <h1><%= @champion.name %> <small>(<%= @role.capitalize %>)</small></h1>
    <h4>Comparing <%= @summoner_name %>'s last <% if @user_stats %><%= @user_stats[:count] %><% else %>0<% end %> ranked matches with
      <% if @average_stats %><%= @average_stats[:count] %><% else %>0<% end %> <%= @tier.capitalize %>-level <% if @only_wins %>victorious <% end %>matches</h4>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <h2>Kills</h2>

    <div class="row">
      <div class="col-sm-3">
        <div class="build_donut" <% if @user_stats %>
                                 data-user-value="<%= @user_stats[:kda] %>"
                                 <% else %>
                                 data-user-value="0"
                                 <% end %>
                                 <% if @average_stats %>
                                 data-comparison-value="<%= @average_stats[:kda] %>"
                                 <% else %>
                                 data-comparison-value="0"
                                 <% end %>
                                 data-chart-title="KDA"
                                 data-summoner-name="<%= @summoner.summoner_name %>"
                                 data-comparison-title="<%= @tier.capitalize %>"></div>
      </div>
      <div class="col-sm-3">
        <div class="build_donut" <% if @user_stats %>
                                 data-user-value="<%= number_with_precision(@user_stats[:kill_participation] * 100, precision: 1) %>"
                                 <% else %>
                                 data-user-value="0"
                                 <% end %>
                                 <% if @average_stats %>
                                 data-comparison-value="<%= number_with_precision(@average_stats[:kill_participation] * 100, precision: 1) %>"
                                 <% else %>
                                 data-comparison-value="0"
                                 <% end %>
                                 data-chart-title="Kill Participation"
                                 data-summoner-name="<%= @summoner.summoner_name %>"
                                 data-comparison-title="<%= @tier.capitalize %>"
                                 data-number-decorator="%"></div>
      </div>
      <div class="col-sm-3">
        <div class="build_donut" <% if @user_stats %>
                                 data-user-value="<%= number_with_precision(@user_stats[:death_participation] * 100, precision: 1) %>"
                                 <% else %>
                                 data-user-value="0"
                                 <% end %>
                                 <% if @average_stats %>
                                 data-comparison-value="<%= number_with_precision(@average_stats[:death_participation] * 100, precision: 1) %>"
                                 <% else %>
                                 data-comparison-value="0"
                                 <% end %>
                                 data-chart-title="Death Participation"
                                 data-summoner-name="<%= @summoner.summoner_name %>"
                                 data-comparison-title="<%= @tier.capitalize %>"
                                 data-number-decorator="%"></div>
      </div>
      <div class="col-sm-3">
        <div class="build_donut" <% if @user_stats %>
                                 data-user-value="<%= @user_stats[:total_damage_dealt_champs]/@user_stats[:total_damage_taken] %>"
                                 <% else %>
                                 data-user-value="0"
                                 <% end %>
                                 <% if @average_stats %>
                                 data-comparison-value="<%= @average_stats[:total_damage_dealt_champs]/@average_stats[:total_damage_taken] %>"
                                 <% else %>
                                 data-comparison-value="0"
                                 <% end %>
                                 data-chart-title="Champ Damage/Taken"
                                 data-summoner-name="<%= @summoner.summoner_name %>"
                                 data-comparison-title="<%= @tier.capitalize %>"></div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <h2>Objectives</h2>
    <table class="table table-bordered table-condensed">
      <thead>
        <tr>
          <th>Source</th>
          <th>Structure Participation</th>
          <th>Wards Placed</th>
          <th>Wards Killed</th>
          <th>Dragons</th>
          <th>Barons</th>
          <th>Team Jungle Camps</th>
          <th>Enemy Jungle Camps</th>
        </tr>
      </thead>
      <tbody>
        <% if @average_stats %>
          <tr>
            <td><%= @tier.capitalize %></td>
            <td><%= number_to_percentage(@average_stats[:structure_participation] * 100, precision: 1) %></td>
            <td><%= @average_stats[:wards_placed] %></td>
            <td><%= @average_stats[:wards_killed] %></td>
            <td><%= @average_stats[:team_dragon_kills] %></td>
            <td><%= @average_stats[:team_baron_kills] %></td>
            <td><%= @average_stats[:monsters_team_jungle] %></td>
            <td><%= @average_stats[:monsters_enemy_jungle] %></td>
          </tr>
        <% else %>
          <tr>
            <td><%= @tier.capitalize %></td>
            <td colspan="7" class="text-center">Not Enough Data</td>
          </tr>
        <% end %>
        <% if @user_stats %>
          <tr>
            <td><%= @summoner.summoner_name %></td>
            <td><%= number_to_percentage(@user_stats[:structure_participation] * 100, precision: 1) %></td>
            <td><%= @user_stats[:wards_placed] %></td>
            <td><%= @user_stats[:wards_killed] %></td>
            <td><%= @user_stats[:team_dragon_kills] %></td>
            <td><%= @user_stats[:team_baron_kills] %></td>
            <td><%= @user_stats[:monsters_team_jungle] %></td>
            <td><%= @user_stats[:monsters_enemy_jungle] %></td>
          </tr>
        <% else %>
          <tr>
            <td><%= @summoner.summoner_name %></td>
            <td colspan="7" class="text-center">Not Enough Data</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

